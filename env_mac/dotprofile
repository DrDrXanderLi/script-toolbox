# Shortcuts
alias ll='ls -lhtr'
alias l.='ls -d .*'
alias h=history
alias grep='grep --color'
alias mkdir='mkdir -pv'
alias diff='colordiff'
alias path='echo -e ${PATH//:/\\n}'
